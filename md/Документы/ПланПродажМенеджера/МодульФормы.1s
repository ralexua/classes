Функция ПроверитьДубльДокумента()
	Если Менеджер.Выбран() = 0 Тогда
		Возврат 0;
	КонецЕсли;
	док = СоздатьОбъект("Документ");
	Док.ВыбратьПоЗначению(,,"ПериодППМ",месяцПлана);
	Пока Док.ПолучитьДокумент() = 1 Цикл
		Если Док.Менеджер <> Менеджер Тогда
			Продолжить;
		Иначе
			Возврат Док.ТекущийДокумент();
		КонецЕсли;
	КонецЦикла;	
	Возврат 0;
КонецФункции

